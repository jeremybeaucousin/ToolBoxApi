# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# toolboxes
OPTIONS /toolboxes					controllers.ToolBoxController.documentation()
GET		/toolboxes					controllers.ToolBoxController.index()
GET		/toolboxes/:id				controllers.ToolBoxController.getToolBoxSheet(id: String)
POST 	/toolboxes					controllers.ToolBoxController.addToolBoxSheet()
PUT 	/toolboxes/:id				controllers.ToolBoxController.editToolBoxSheet(id: String)
DELETE	/toolboxes/:id				controllers.ToolBoxController.deleteToolBoxSheet(id: String)
